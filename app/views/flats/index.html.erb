<div class="container mt-3">
  <div class="row">
    <h1>All our flats</h1>
  </div>
  <div class="row">
    <p>All <%= @flats.count %> flats.</p>
  </div>
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-3">
      <div class="card" style="width: 16rem;">
        <div class="card-header">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <div class="d-flex align-items-center p-1">
              <i class="fas fa-user-friends mr-2"></i>
              <span><%= flat.price_per_night %></span>
            </div>
            <div class="d-flex align-items-center p-1 ml-3">
              <i class="fas fa-euro-sign mr-2"></i>
              <span><%= flat.number_of_guests %></span>
            </div>
          </div>
        </div>
        <div class="card-body">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat), class: "ml-3 text-warning" %>
          <%= link_to "Remove", flat_path(flat.id), method: :delete, data: { confirm: "Are you sure?" }, class: "ml-3 text-danger" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>